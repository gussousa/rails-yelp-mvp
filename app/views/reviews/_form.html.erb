<%= form_for [@restaurant, @review] do |f| %>
  <%= f.label :content, class: "mt-3" %>
  <%= f.text_area :content, class: "form-control"  %>
  <%= f.label :rating, class: "mt-3" %>
  <%= f.number_field :rating, max: 5, min: 0, class: "form-control"  %>
  <%= f.submit class: "btn btn-primary mt-4" %>
<% end %>
